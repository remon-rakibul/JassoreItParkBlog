<% include ./partials/header %>

<div class="ui text main container segment">
    <div class="ui huge header">New Blog Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" id="title" name="blog[title]" placeholder="Enter the title" required>
        </div>
        <div class="field">
            <label for="image">Image URL</label>
            <input type="text" id="image" name="blog[image]" placeholder="Enter the image url" required>
        </div>
        <div class="field">
            <label for="body">Content</label>
            <textarea name="blog[body]" id="body" placeholder="Enter the post content" minlength="100" required></textarea>
        </div>
        <div class="field">
            <input class="ui purple basic big button" type="submit" value="submit">
        </div>
    </form>
</div>

<% include ./partials/footer %>