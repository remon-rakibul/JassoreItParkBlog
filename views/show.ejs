<% include ./partials/header %>

<div class="ui text main container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%= blog.image %>" alt="post image" class="ui centered rounded image">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
                <div class="description">
                    <p><%- blog.body %></p>
                </div>
            </div>
            <a href="/blogs/<%= blog._id %>/edit" class="ui orange basic button">Edit Post</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <input class="ui red basic button" type="submit" value="Delete Post">
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>