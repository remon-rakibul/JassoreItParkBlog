<% include ./partials/header %>

<div class="ui text main container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" id="title" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="image">Image URL</label>
            <input type="text" id="image" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="body">Content</label>
            <textarea name="blog[body]" id="body" minlength="100"><%= blog.body %></textarea>
        </div>
        <div class="field">
            <input class="ui purple basic big button" type="submit" value="submit">
        </div>
    </form>
</div>

<% include ./partials/footer %>